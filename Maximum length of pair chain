class Solution:
    def findLongestChain(self, pairs: List[List[int]]) -> int:
        
        pairs.sort(key=lambda x:x[1])
        l=0
        c=1
        for i in range(len(pairs)-1):
            if pairs[l][1]<pairs[i+1][0]:
                c+=1
                l=i+1
            else:
                l=min(i,l)
        return c
