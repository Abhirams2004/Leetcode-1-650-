class Solution:
    def constructArray(self, n: int, k: int):
        result = list(range(1, n - k))
        left, right = n - k, n
        for i in range(k + 1):
            if i % 2 == 0:
                result.append(left)
                left += 1
            else:
                result.append(right)
                right -= 1
        return result
