class Solution:
    def exclusiveTime(self, n: int, logs: list[str]) -> list[int]:
        exclusive_times = [0] * n
        stack = []
        prev_time = 0
        
        for log in logs:
            fn_id_str, typ, time_str = log.split(':')
            fn_id, timestamp = int(fn_id_str), int(time_str)
            
            if typ == 'start':
                if stack:
                    exclusive_times[stack[-1]] += timestamp - prev_time
                stack.append(fn_id)
                prev_time = timestamp
            else:
                last_fn = stack.pop()
                exclusive_times[last_fn] += timestamp - prev_time + 1
                prev_time = timestamp + 1
        
        return exclusive_times
        
