class Solution:
    def maxProfit(self, prices: List[int], fee: int) -> int:
        @cache
        def dp(i, holding):
            if i >= len(prices):
                return 0

            # Option 1: Skip today's action
            skip = dp(i + 1, holding)

            if holding:
                # Option 2: Sell stock and pay fee
                ans = max(skip, prices[i] + dp(i + 1, False) - fee)
            else:
                # Option 3: Buy stock
                ans = max(skip, -prices[i] + dp(i + 1, True))

            return ans 

        return dp(0, False)
        
